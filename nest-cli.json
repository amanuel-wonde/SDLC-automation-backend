{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true
  },
  "monorepo": true,
  "root": "apps/api-gateway",
  "projects": {
    "ai-service": {
      "type": "application",
      "root": "apps/ai-service",
      "entryFile": "main",
      "sourceRoot": "apps/ai-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/ai-service/tsconfig.app.json"
      }
    },
    "api-gateway": {
      "type": "application",
      "root": "apps/api-gateway",
      "entryFile": "main",
      "sourceRoot": "apps/api-gateway/src",
      "compilerOptions": {
        "tsConfigPath": "apps/api-gateway/tsconfig.app.json",
        "plugins": [
          "@nestjs/swagger"
        ]
      }
    },
    "auth": {
      "type": "application",
      "root": "apps/auth",
      "entryFile": "main",
      "sourceRoot": "apps/auth/src",
      "compilerOptions": {
        "tsConfigPath": "apps/auth/tsconfig.app.json"
      }
    },
    "common": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.lib.json"
      }
    },
    "project-service": {
      "type": "application",
      "root": "apps/project-service",
      "entryFile": "main",
      "sourceRoot": "apps/project-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/project-service/tsconfig.app.json"
      }
    }
  }
}